<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.controller.QuizController" prefHeight="Infinity" prefWidth="Infinity"
    stylesheets="style.css">
    <HBox styleClass="hbox" spacing="100" prefHeight="Infinity" prefWidth="Infinity">
        <VBox>
            <Label fx:id="questionLabel" text="Question" />
            <VBox spacing="10" fx:id="optionsBox">
                <children>
                    <RadioButton text="Option 1" toggleGroup="$toggleGroup" />
                    <RadioButton text="Option 2" toggleGroup="$toggleGroup" />
                    <RadioButton text="Option 3" toggleGroup="$toggleGroup" />
                    <RadioButton text="Option 4" toggleGroup="$toggleGroup" />
                </children>
            </VBox>
            <HBox spacing="10">
                <Button fx:id="prevQuest" text="prev" onAction="#handlePrev"></Button>
                <Button fx:id="nextQuest" text="next" onAction="#handleNext" ></Button>
            </HBox>
            <Label fx:id="resultLabel" text="" />
        </VBox>


        <VBox spacing="10" fx:id="questionBox" styleClass="QuestionBox">
            <Label text="Question" />
        </VBox>

    </HBox>
</VBox>