<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="498.0" prefWidth="829.0" spacing="20"
   style="-fx-background-color: #121632;"
   xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.example.controller.QuizController">
   <children>
      <VBox VBox.vgrow="ALWAYS" />
      <Label fx:id="quest_content" 
        style="-fx-text-fill: white; -fx-font-size: 36px;" text="Question goes here" wrapText="true" alignment="CENTER" />
      <VBox VBox.vgrow="ALWAYS" />

      <HBox alignment="CENTER" spacing="20">
         <children>
            <Button fx:id="opt1Button" mnemonicParsing="false" prefHeight="93.0" prefWidth="389.0"
               style="-fx-background-color: #7B68EE; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-font-size: 20px;"
               text="Option 1" textFill="WHITE" />
            <Button fx:id="opt2Button" mnemonicParsing="false" prefHeight="93.0" prefWidth="406.0"
               style="-fx-background-color: #7B68EE; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-font-size: 20px;"
               text="Option 2" textFill="WHITE" />
         </children>
      </HBox>

      <HBox alignment="CENTER" spacing="20">
         <children>
            <Button fx:id="opt3Button" mnemonicParsing="false" prefHeight="87.0" prefWidth="389.0"
               style="-fx-background-color: #7B68EE; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-font-size: 20px;"
               text="Option 3" textFill="WHITE" />
            <Button fx:id="opt4Button" mnemonicParsing="false" prefHeight="87.0" prefWidth="406.0"
               style="-fx-background-color: #7B68EE; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-font-size: 20px;"
               text="Option 4" textFill="WHITE" />
         </children>
      </HBox>

      <Label fx:id="resultBanner" prefHeight="100.0" prefWidth="300.0"
         style="-fx-font-size: 36px; -fx-alignment: center; -fx-background-radius: 10px; -fx-border-radius: 10px; fx-color: white"
         text="Result" visible="false" />

      <HBox alignment="CENTER" spacing="20">
         <children>
            <Text fx:id="resultText" text="" style="-fx-fill: white;" />
            <Text fx:id="userPoint" text="" style="-fx-fill: white;" />
         </children>
      </HBox>

      <Button fx:id="exitButton" text="Exit" onAction="#handleExit" />
   </children>
</VBox>